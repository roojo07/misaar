@using Misaar.Models
@model IEnumerable<Article>

@{
    ViewBag.Title = "Статьи";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Статьи</h2>

@Html.ActionLink("Создать новую статью", "Create", null, new { @class = "btn btn-primary btn-text" })

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>       
        <td class="group">
            <div class="btn btn-default">@Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) </div>
            <div class="btn btn-default">@Html.ActionLink("Детали", "Details", new { id = item.Id })</div>
            <div class="btn btn-default">@Html.ActionLink("Удалить", "Delete", new { id = item.Id })</div>
        </td>
    </tr>
}

</table>
