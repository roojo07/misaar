@model IEnumerable<Misaar.Models.SeoData>

@{
    ViewBag.Title = "Все метаданные";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Метаданные</h2>

<a href=@Url.Action("Create", "Seo")>
    <p class="btn btn-primary btn-text">
        Создать новый
    </p>
</a>

<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KeyWords)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MetaDescription)
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KeyWords)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MetaDescription)
        </td>       
        <td class="group">
            <div class="btn btn-default">@Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) </div>
            <div class="btn btn-default">@Html.ActionLink("Детали", "Details", new { id = item.Id })</div>
            <div class="btn btn-default">@Html.ActionLink("Удалить", "Delete", new { id = item.Id })</div>
        </td>
    </tr>
}

</table>
