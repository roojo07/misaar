@model IEnumerable<Misaar.Models.Phone>

@{
    ViewBag.Title = "Телефоны";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Телефоны</h2>

<a href=@Url.Action("Create", "Phones")>
    <p class="btn btn-primary btn-text">
        Создать новый телефон
    </p>
</a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Operator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HasViber)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Operator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasViber)
        </td>
        
        <td class="group">
            <div class="btn btn-default">@Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) </div>
            <div class="btn btn-default">@Html.ActionLink("Детали", "Details", new { id = item.Id })</div>
            <div class="btn btn-default">@Html.ActionLink("Удалить", "Delete", new { id = item.Id })</div>
        </td>
    </tr>
}

</table>
